def wishMe():
    hour = int(datetime.datetime.now().hour)
    if hour>=0 and hour<12:
        speak("Good Morning!")
        print("Good Morning!")
        
    elif hour>=12 and hour<18:
        speak("Good Afternoon")
        print("Good Afternoon!")

    else:
        speak("Good Evening!")
        print("Good Evening!")

    a = "It's your Virtual Assistant . Please tell me how I can help you"
    print_speak(a)


